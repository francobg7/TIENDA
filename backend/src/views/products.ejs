<!DOCTYPE html>
<html>
<head>
    <title>Productos</title>
    <style>
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 8px; border: 1px solid #ddd; }
        .form-basic { margin: 20px 0; max-width: 300px; }
        input, select { margin: 5px 0; padding: 5px; width: 100%; }
        button { padding: 5px 10px; margin: 5px 0; }
    </style>
</head>
<body>
    <h1>Productos</h1>

    <!-- Formulario Simple -->
    <form class="form-basic" action="/products" method="POST">
        <input type="text" name="name" placeholder="Nombre" required>
        <input type="number" name="price" placeholder="Precio" required>
        <select name="type" required>
            <option value="sneaker">Sneaker</option>
            <option value="remera">Remera</option>
        </select>
        <input type="text" name="size" placeholder="Talla" required>
        <input type="number" name="stock" placeholder="Stock" required>
        <button type="submit">Agregar</button>
    </form>

    <!-- Lista Simple -->
    <% if (locals.products && products.length > 0) { %>
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Tipo</th>
                <th>Stock</th>
                <th>Acci√≥n</th>
            </tr>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td>$<%= product.price %></td>
                    <td><%= product.type %></td>
                    <td><%= product.stock %></td>
                    <td>
                        <form action="/products/<%= product._id %>" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>
    <% } else { %>
        <p>No hay productos</p>
    <% } %>
</body>
</html>